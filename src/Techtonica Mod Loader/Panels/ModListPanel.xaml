<UserControl x:Class="Techtonica_Mod_Loader.Panels.ModListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Techtonica_Mod_Loader.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="494" d:DesignWidth="1180">
    <Grid>
        <Border Background="{DynamicResource darkBackgroundBrush}" CornerRadius="5">
            <Grid>
                <Label Content="Mod List" FontSize="16" Foreground="White" 
                       BorderBrush="{DynamicResource yellowBrush}" BorderThickness="0,0,0,1" Margin="5,0"
                       VerticalAlignment="Top"/>
                <ScrollViewer x:Name="modsScroller" Margin="5,38,5,5">
                    <StackPanel x:Name="modsPanel"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
