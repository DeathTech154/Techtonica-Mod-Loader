<UserControl x:Class="Techtonica_Mod_Loader.Controls.MarkdownViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Techtonica_Mod_Loader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Mod Description" Style="{DynamicResource titleStyle}" Margin="5,0"/>
        <ScrollViewer x:Name="scroller" VerticalScrollBarVisibility="Auto" Margin="10,40,5,0">
            <StackPanel x:Name="mainPanel" Margin="0,0,5,0"/>
        </ScrollViewer>  
    </Grid>
</UserControl>
