<UserControl x:Class="Techtonica_Mod_Loader.Panels.LoadingScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Techtonica_Mod_Loader.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="100,25">
            <Image Source="/Logo.png"  VerticalAlignment="Top">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="{DynamicResource yellow}"/>
                </Image.Effect>
            </Image>
            <Label Content="By DeathTech &amp; Equinox" Foreground="White" 
               FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,0">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="{DynamicResource yellow}"/>
                </Label.Effect>
            </Label>
        </StackPanel>
        
        <Label Content="Now loading, please wait..." Foreground="White" FontSize="16" 
               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,25"/>
    </Grid>
</UserControl>
